<!DOCTYPE html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
</head>
<body>
	<script>
      window.fbAsyncInit = function() {
        FB.init({
          appId      : '1482314898717538',
          xfbml      : true,
          version    : 'v2.1'
        });
      };

      (function(d, s, id){
         var js, fjs = d.getElementsByTagName(s)[0];
         if (d.getElementById(id)) {return;}
         js = d.createElement(s); js.id = id;
         js.src = "//connect.facebook.net/en_US/sdk.js";
         fjs.parentNode.insertBefore(js, fjs);
       }(document, 'script', 'facebook-jssdk'));
    </script>

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Invitable - Log In</title>
<link rel="stylesheet" href="../public/css/foundation.css">
<script src="/modernizr.js"></script>
<link rel="stylesheet" href="../public/css/app.css">
<link rel="stylesheet" href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
<div class="row">
	<div class="columns small-12 head">
		<div class="columns small-12">
			<h1>Invitable</h1>
		</div>
		<div class="columns small-12 option">
			<a href="/login" class="option">Log In</a><a href="/signup" class="option">Sign Up</a>
		</div>
	</div>
</div>
<div class="row">
	<div class="columns small-12 body">

		<!-- display messages that are sent back from authentication -->
		<% if (message.length > 0) { %>
        <div data-alert class="alert-box warning"><%= message %></div>
        <a href="#" class="close">&times;</a>
    	<% } %>
			<div class="columns small-12 large-8 medium-8">
				Log In
				<form action="/login" method="post">
					<label>Email<input type="text" name="email" class="form-control"></label><label>Password<input type="password" name="password" class="form-control"></label><button type="submit" class="btn btn-warning btn-lg">Login</button>
				</form>
				<hr>
				<p>
					<div class="fb-login-button" data-max-rows="1" data-size="medium" data-show-faces="false" data-auto-logout-link="false"></div>
				</p>
				<hr>
				<p>
					Need an account? <a href="/signup">Sign up</a>.
				</p>
				<p>
					Return to the <a href="/">homepage</a>.
				</p>
			</div>
	</div>
</div>
</body>
</html>
