<!doctype html>
<html class="no-js" lang="en">
	<head>
		<meta charset="utf-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<title>Invitable</title>
		<% include head.ejs %>
		</head>
	<body>

		<h1 class="logo"><a href="/">Invitable</a></h1>
		<div class="card-container">
			<div class="card">
				<div class="push-up-right">
					<form action="/login" method="post" class="form-auth">
							<input type="email" name="email" placeholder="E-mail Address">
							<input type="password" name="password" placeholder="Password">
							<button type="submit" class="btn btn-default btn-login">Login</button>
					</form>
				</div>
				<h1>Get and Share invite codes with Invitable!</h1>
				<a href="/signup">
					<button class="btn btn-info btn-lg btn-signup-index">Sign Up Now</button>
				</a>
			</div>
		</div>
	</body>
</html>
